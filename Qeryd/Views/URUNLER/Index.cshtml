@using Qeryd.Models.Entity;
@model List<TBLURUNLER_>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/View.cshtml";
}
<table class="table table-bordered">

    <tr>
        <th>ÜRÜN ID</th>
        <th>ÜRÜN ADI</th>
        <th>ÜRÜN MARKASI</th>
        <th>KATEGORİ</th>
        <th>FİYAT</th>
        <th>KALAN STOK</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>




    </tr>




    <tbody>

        @foreach (var x in Model)
        {
            <tr>
                <td>@x.URUNID</td>
                <td>@x.URUNAD</td>
                <td>@x.MARKA</td>
                <td>@x.URUNKATEGORI</td>
                <td>@x.FIYAT</td>
                <td>@x.STOK</td>
                <td><a href="/URUN/SIL/@x.URUNID" class="btn btn-danger">SİL</a>
                <td><a href="/URUN/SIL/@x.URUNID" class="btn btn-danger">GÜNCELLE</a>



            </tr>
        }

    </tbody>
     


</table>
<a href="/URUNLER/YenıUrun/" class="btn btn-primary">YENİ ÜRÜN EKLE</a>

