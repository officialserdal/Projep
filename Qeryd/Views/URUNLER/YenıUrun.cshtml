@model Qeryd.Models.Entity.TBLURUNLER_
@{
    ViewBag.Title = "YenıUrun";
    Layout = "~/Views/Shared/View.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="URUNAD" required=""/>

    </div>
    <div>
        <label>Ürün Markası</label>
        <input type="text" class="form-control" name="MARKA" required=""/>

    </div>
    <div>

        <label>Kategori Seçiniz</label>
        @Html.DropDownListFor(m => m.KATEGORILER.KATEGORIID,(List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })


    
    </div>
    <div>
        <label>Fiyatı</label>
        <input type="text" class="form-control" name="FIYAT" />
    </div>
    <div>

        <label>Stok</label>
        <input type="text" class="form-control" name="STOK" />

    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>
</form>


