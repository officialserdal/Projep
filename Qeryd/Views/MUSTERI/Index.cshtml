@using Qeryd.Models.Entity;
@model List<TBLMUSTERILER_>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/View.cshtml";
}

<table class="table table-bordered">

    <tr>
        <th>MÜŞTERİ ID</th>
        <th>MÜŞTERİ ADI</th>
        <th>MÜŞTERİ SOYADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>ALERT</th>
    </tr>

    <tbody>


        @foreach (var x in Model)
        {
        <tr>
            <td>@x.MUSTERIID</td>
            <td>@x.MUSTERIAD</td>
            <td>@x.MUSTERISOYAD</td>
            <td><a href="/MUSTERI/SIL/@x.MUSTERIID" class="btn btn-danger" id="btn2">SİL</a>
            <td><a href="/MUSTERI/MusterıGetır/@x.MUSTERIID" class="btn btn-danger">GÜNCELLE</a>
            <td>
                @Html.ActionLink("SİL BUTONU", "SIL", new { id = x.MUSTERIID }, new { @class = "btn btn-warning", onclick = "return confirm('Gerçekten silmek istiyor musunuz?');" })
            </td>

        </tr>

        }
 


    </tbody>



</table>
<a href="/MUSTERI/YenıMusterı/" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>

