@model Qeryd.Models.Entity.TBLMUSTERILER_
@{
    ViewBag.Title = "YenıMusterı";
    Layout = "~/Views/Shared/View.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>Müşteri Adı</label>
        @Html.TextBoxFor(m => m.MUSTERIAD, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MUSTERIAD, "", new { @stlye = "color:red " })

    </div>

    <div>

        <label>Müşteri Soyadı</label>

        @Html.TextBoxFor(m => m.MUSTERISOYAD, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MUSTERISOYAD, "", new { @stlye = "color:red " })

    </div>
    <div>

        <button class="btn btn-info" id="btn1">Müşteri Ekle</button>
    </div>
    <script>
        $('#btn1').click(function(){
            alert('Müşteri ekleme işlemi yapıldı...!');

        });

    </script>
</form>
